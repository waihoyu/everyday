<view class="mpage" style="width:{{ui.windowWidth}}px;left:{{ui.offsetLeft}}px" bindtouchstart="handlerStart" bindtouchmove="handlerMove" bindtouchcancel="handlerCancel" bindtouchend="handlerEnd">
    <scroll-view scroll-y style="height: 100%;" bindscroll="handlerScroll">
        <view class="search">
            <view class="avatar" catchtap="handlerAvatarTap">
                <image src="../assets/images/ic_face.png"></image>
            </view>
        </view>
        <view class="item" wx:for="1234555" wx:key="{{index}}">
            <image src="../assets/images/ic_face.png"></image>
        </view>
    </scroll-view>
</view>
<view class="user" style="width:{{ui.menuWidth}}px">
    <view class="user-box">
        <view class="user-face-wrapper">
            <image class="user-face" src="../assets/images/ic_face.png"></image>
        </view>
        <vew class="one-menu" wx:for="1234" wx:key="{{index}}">
            <text>新年大吉</text>
        </vew>
    </view>
</view>